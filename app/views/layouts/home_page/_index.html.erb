        </div>
      </div>
      <div class="row">
        <% Event.themed_fests.each do |event|%>
          <div class="each-event">
            <div class="event_thumb text-center">
              <%= image_tag event.file_path.url(:large) rescue ""%>
            </div>
            <div class="event_content text-center">
              <h5><%= link_to  event.title , public_view_events_path( theme_id: event.theme_id)%></h5>
              <div class="details d-flex">
                <span><%= event.djs%></span>
                <span class="ml-auto"><%= "#{time_ago_in_words(event.starts_at)} ago" %></span>
              </div>
            </div>
          </div>
        <%end%>
        <div class="col-md-12 text-right">
          <a href="#" class="btn-book">View More</a>
        </div>
      </div>
    </div>
