    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="section_title_style2 mb-20 text-center">
            <h2>Fest Photos</h2>
        </div>
      </div>
      <div class="row">
        <div class="row">
          <% EventPhoto.limit(10).each do |photo|%>
            <% next if photo.file_path.blank? %>
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-title=""
                   data-image="<%= photo.file_path.url(:large)%>"
                   data-target="#image-gallery">
                    <img class="img-thumbnail"
                         src='<%= photo.file_path.url(:large)%>'
                         alt="Another alt text">
                </a>
            </div>
          <%end%>
        </div>


