<div class="inner-banner">
  <div class="container">
    <div class="row">
      <div class="text col-lg-9">
        <h2>Themes</h2>
        <h3 class="dancing">Almost before we knew</h3>
      </div>
      <div class="col-lg-3 text-right">
        <%= link_to 'New Theme', new_theme_path , class: "btn btn-warning"%>
      </div>
    </div>
  </div>
</div>
<section class="inner-page">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <table>
          <thead>
            <tr>
              <th>Tittle</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @themes.each do |theme| %>
              <tr>
                <td><%= theme.tittle %></td>
                <td><%= link_to 'Show', theme %></td>
                <td><%= link_to 'Edit', edit_theme_path(theme) %></td>
                <td><%= link_to 'Destroy', theme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</section>

