<%=simple_form_for :simple_search, method: :get, remote: true do |f|%>
  <%= f.input :id, as: :string  , label: false%>
<% end %>



<script>
$(document).ready(function(){
  $("#simple_search_id").keyup(function(){
    $.ajax({
    type: "GET",
    url: '<%= simple_search_events_path %>',
    data:'q='+$(this).val()
    });
  });
});
</script>