<%=simple_form_for :simple_search, method: :get, remote: true do |f|%>
  <div class="input-group simple-search ml-auto">
    <%= f.input :id, as: :string  , label: false, placeholder: "Search this blog"%>
    <div class="input-group-append">
      <button class="btn btn-secondary" type="button">
        <i class="fa fa-search"></i>
      </button>
    </div>
  </div>
<% end %>



<script>
$(document).ready(function(){
  $("#simple_search_id").keyup(function(){
    $.ajax({
    type: "GET",
    url: '<%= simple_search_events_path %>',
    data:'q='+$(this).val()
    });
  });
});
</script>